    <img class="w-6" src="../Images/logo.png" alt="Logo">
    <p class="font-semibold text-xl">Administration</p>
    <div class="flex justify-center items-center bg-white rounded-[50%] size-6 text-black cursor-pointer" onclick="toggleSidebar()"><i class="lg:hidden ph-fill ph-caret-left"></i><i class="hidden lg:block ph-fill ph-caret-right"></i></div>
  </div>

  <div class="flex flex-col gap-y-5 mt-10">
    <a onclick="toggleSidebar()" href="/admin/dashboard" class="<%= currentPage === '/dashboard' ? 'bg-darkGreen font-bold text-white' : 'font-medium hover:bg-darkGreen hover:text-white duration-300' %> rounded-lg p-3 flex items-center gap-x-5"><i class="ph-fill ph-squares-four text-2xl"></i> Dashboard</a>
    <a onclick="toggleSidebar()" href="/admin/deposit" class="<%= currentPage === '/deposit' ? 'bg-darkGreen font-bold text-white' : 'font-medium hover:bg-darkGreen hover:text-white duration-300' %> rounded-lg p-3 flex items-center gap-x-5"><i class="ph-fill ph-hand-deposit text-2xl"></i> Deposit</a>
    <a onclick="toggleSidebar()" href="/admin/withdrawal" class="<%= currentPage === '/withdrawal' ? 'bg-darkGreen font-bold text-white' : 'font-medium hover:bg-darkGreen hover:text-white duration-300' %> rounded-lg p-3 flex items-center gap-x-5"><i class="ph-fill ph-hand-withdraw text-2xl"></i> Withdraw</a>
    <a onclick="toggleSidebar()" href="/admin/bonus" class="<%= currentPage === '/bonus' ? 'bg-darkGreen font-bold text-white' : 'font-medium hover:bg-darkGreen hover:text-white duration-300' %> rounded-lg p-3 flex items-center gap-x-5"><i class="ph-fill ph-plus-circle text-2xl"></i> Bonus</a>
    <hr class="bg-black/20 h-0.5">
    <a onclick="toggleSidebar()" href="/admin/penalty" class="<%= currentPage === '/penalty' ? 'bg-darkGreen font-bold text-white' : 'font-medium hover:bg-darkGreen hover:text-white duration-300' %> rounded-lg p-3 flex items-center gap-x-5"><i class="ph-fill ph-minus-circle text-2xl"></i> Penalty</a>
    <a onclick="toggleSidebar()" href="/admin/investment" class="<%= currentPage === '/investment' ? 'bg-darkGreen font-bold text-white' : 'font-medium hover:bg-darkGreen hover:text-white duration-300' %> rounded-lg p-3 flex items-center gap-x-5"><i class="ph-fill ph-treasure-chest text-2xl"></i> Investment</a>
    <a onclick="toggleSidebar()" href="/admin/investors" class="<%= currentPage === '/investors' ? 'bg-darkGreen font-bold text-white' : 'font-medium hover:bg-darkGreen hover:text-white duration-300' %> rounded-lg p-3 flex items-center gap-x-5"><i class="ph-fill ph-users-three text-2xl"></i> Investors</a>
    <form action="/logout" method="post">
      <button type="submit" class="font-medium hover:bg-darkGreen hover:text-white duration-300' %> rounded-lg p-3 flex items-center gap-x-5 mb-14 w-full"><i class="ph-fill ph-sign-out text-2xl"></i> Logout</button>
    </form>
  </div>

</aside>

<!-- Add Scripts -->
<script>
  function toggleSidebar() {
    const sidebar = document.getElementById('sidebar');
    const overlay = document.getElementById('overlay');
    const isClosed = sidebar.classList.contains('-translate-x-full');

    if (isClosed) {
      overlay.classList.remove('hidden');
      overlay.classList.add('translate-x-0');
      setTimeout(() => sidebar.classList.remove('-translate-x-full'), 500);
    } else {
      sidebar.classList.add('-translate-x-full');
      setTimeout(() => overlay.classList.add('hidden', 'translate-x-0'), 500);
    }
  }

  document.getElementById('sidebar-toggle').addEventListener('click', toggleSidebar);
  document.getElementById('overlay').addEventListener('click', toggleSidebar);
</script>